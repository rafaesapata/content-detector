# ===================================================================
# CONFIGURAÇÕES AVANÇADAS DE ANÁLISE DE TEMPO - v7.3.1
# ===================================================================
# Configurações específicas para análise detalhada de ociosidade

# ===================================================================
# THRESHOLDS DE ATIVIDADE (0.0-1.0)
# ===================================================================

# Threshold para movimento muito baixo (praticamente parado)
VITE_VERY_LOW_ACTIVITY_THRESHOLD=0.01

# Threshold para movimento baixo (ainda considerado ocioso)
VITE_LOW_ACTIVITY_THRESHOLD=0.05

# Threshold para movimento moderado (atividade leve)
VITE_MODERATE_ACTIVITY_THRESHOLD=0.15

# Threshold para movimento alto (atividade intensa)
VITE_HIGH_ACTIVITY_THRESHOLD=0.30

# ===================================================================
# CONFIGURAÇÕES DE PRODUTIVIDADE
# ===================================================================

# Ratio mínimo para considerar hora produtiva (0.0-1.0)
VITE_PRODUCTIVE_HOUR_THRESHOLD=0.6

# Ratio máximo para considerar hora improdutiva (0.0-1.0)
VITE_UNPRODUCTIVE_HOUR_THRESHOLD=0.3

# Número máximo de horas produtivas a exibir
VITE_MAX_PRODUCTIVE_HOURS_DISPLAY=3

# Número máximo de horas improdutivas a exibir
VITE_MAX_UNPRODUCTIVE_HOURS_DISPLAY=3

# ===================================================================
# CONFIGURAÇÕES DE PERÍODOS
# ===================================================================

# Tempo mínimo para considerar período significativo (minutos)
VITE_MIN_SIGNIFICANT_PERIOD=2

# Número máximo de períodos ociosos a analisar
VITE_MAX_IDLE_PERIODS_ANALYSIS=10

# Número máximo de períodos ativos a analisar
VITE_MAX_ACTIVE_PERIODS_ANALYSIS=10

# ===================================================================
# CONFIGURAÇÕES DE RELATÓRIO
# ===================================================================

# Habilitar análise horária detalhada
VITE_ENABLE_HOURLY_ANALYSIS=true

# Habilitar detecção de padrões de trabalho
VITE_ENABLE_WORK_PATTERNS=true

# Habilitar classificação de produtividade
VITE_ENABLE_PRODUCTIVITY_CLASSIFICATION=true

# Habilitar logs detalhados de análise de tempo
VITE_DEBUG_TIME_ANALYSIS=true
