# ===================================================================
# EXEMPLO DE CONFIGURAÇÃO - DETECTOR INTELIGENTE v7.3.0-final
# ===================================================================
# Copie este arquivo para .env e ajuste os valores conforme necessário

# ===================================================================
# CONFIGURAÇÕES GERAIS DA APLICAÇÃO
# ===================================================================
VITE_APP_TITLE="Detector Inteligente"
VITE_APP_VERSION="7.3.0-final"
VITE_MAX_FILE_SIZE_MB=10

# ===================================================================
# CONFIGURAÇÕES DE DETECÇÃO NSFW
# ===================================================================
VITE_NSFW_PORN_THRESHOLD=0.5
VITE_NSFW_HENTAI_THRESHOLD=0.5
VITE_NSFW_SEXY_THRESHOLD=0.7
VITE_NSFW_MIN_DISPLAY_THRESHOLD=0.1
VITE_NSFW_SEXY_DESTRUCTIVE_THRESHOLD=0.5

# ===================================================================
# CONFIGURAÇÕES DE DETECÇÃO DE JOGOS
# ===================================================================
VITE_GAME_DETECTION_THRESHOLD=0.30
VITE_GAME_DRAWING_THRESHOLD=0.6
VITE_GAME_MIN_CONFIDENCE_FOR_DRAWING=0.2

# Pesos para análise de jogos (devem somar 1.0)
VITE_GAME_COLOR_WEIGHT=0.20
VITE_GAME_HUD_WEIGHT=0.40
VITE_GAME_PERSPECTIVE_WEIGHT=0.25
VITE_GAME_COMPLEXITY_WEIGHT=0.15
VITE_GAME_TEXT_WEIGHT=0.00

VITE_GAME_SATURATION_THRESHOLD=0.3
VITE_GAME_SATURATION_BONUS=0.2

# ===================================================================
# CONFIGURAÇÕES DE REGIÕES HUD
# ===================================================================
VITE_GAME_MINIMAP_X=0.75
VITE_GAME_MINIMAP_Y=0.75
VITE_GAME_MINIMAP_WIDTH=0.25
VITE_GAME_MINIMAP_HEIGHT=0.25

VITE_GAME_HEALTHBAR_X=0.3
VITE_GAME_HEALTHBAR_Y=0.85
VITE_GAME_HEALTHBAR_WIDTH=0.4
VITE_GAME_HEALTHBAR_HEIGHT=0.1

VITE_GAME_INVENTORY_X=0.25
VITE_GAME_INVENTORY_Y=0.8
VITE_GAME_INVENTORY_WIDTH=0.5
VITE_GAME_INVENTORY_HEIGHT=0.15

VITE_GAME_TOPRIGHT_X=0.7
VITE_GAME_TOPRIGHT_Y=0.0
VITE_GAME_TOPRIGHT_WIDTH=0.3
VITE_GAME_TOPRIGHT_HEIGHT=0.15

# ===================================================================
# PESOS DAS REGIÕES HUD
# ===================================================================
VITE_GAME_MINIMAP_WEIGHT=0.35
VITE_GAME_HEALTHBAR_WEIGHT=0.30
VITE_GAME_INVENTORY_WEIGHT=0.25
VITE_GAME_TOPRIGHT_WEIGHT=0.10

# ===================================================================
# CONFIGURAÇÕES DE ANÁLISE DE OCIOSIDADE
# ===================================================================
VITE_IDLENESS_CHANGE_THRESHOLD=0.05
VITE_IDLENESS_MAX_IDLE_TIME=300000
VITE_IDLENESS_HIGH_THRESHOLD=70
VITE_IDLENESS_MODERATE_THRESHOLD=40
VITE_IDLENESS_MAX_RESOLUTION=800

# ===================================================================
# CONFIGURAÇÕES DE INTERFACE
# ===================================================================
VITE_UI_MAX_SERVICES_DISPLAY=5
VITE_UI_MAX_SOFTWARE_DISPLAY=3
VITE_UI_MAX_DETECTION_LOGS=5
VITE_UI_MAX_IDLE_PERIODS=3

# ===================================================================
# CONFIGURAÇÕES DE DEBUG
# ===================================================================
VITE_DEBUG_ENABLED=true
VITE_DEBUG_SOFTWARE_DETECTION=true
VITE_DEBUG_GAME_ANALYSIS=true
VITE_DEBUG_OCR=true
